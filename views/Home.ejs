<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>TourTrove</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="css/Home.css">
  <link rel="icon" href="assets/titlelogo.jpg" type="image/x-icon">
  <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
</head>

<body>
  <%- include("includes/Navbar.ejs") %>
    <div class="Hii"></div>
    <div id="flashMessage"><%= msg %></div>
    <div class="main">
      <div class="searchhome">
        <div class="searchhometitle">
          <span class="first_half">Get ready for</span> &nbsp;
          <span class="second_half">Trip of a Lifetime</span>
        </div>
        <div class="row height d-flex justify-content-center align-items-center">
          <div class="col-md-6">
            <form action="/search" class="formsearch" method="POST">
              <i class="fa fa-search"></i>
              <input type="text" name="searchDestination" class="form-control form-input" placeholder="Search Destinations,Tours" required>
            </form>
          </div>
        </div>
      </div>
      <h3 class="indiatriptitle">India</h3>
      <div class="indiatrip">
        <div class="wrapper">
          <i id="left1" class="fa-solid fas fa-angle-left"></i>
          <ul class="carousel">
            <% for(let package of indpackage){ %>
              <a href="/<%= package._id %>">
                <li class="card">
                  <div class="img"><img src="<%= package.image.url %>" alt="" draggable="false"></div>
                  <div class="package">
                    <h3 class="packagetitle"><%= package.title %></h3>
                    <h6 class="packageduration"><i class="fa-regular fa-calendar"></i>&nbsp;<%= package.duration %></h6>
                    <h6 class="packageprice">&#8377; <%= package.price.toLocaleString("en-IN") %></h6>
                  </div>
                </li>
              </a>
            <% } %>
          </ul>
          <i id="right1" class="fa-solid fas fa-angle-right"></i>
        </div>
      </div>
      <h3 class="abroadtriptitle">Abroad</h3>
      <div class="abroadtrip">
        <div class="wrapper">
          <i id="left2" class="fa-solid fas fa-angle-left"></i>
          <ul class="carousel">
            <% for(let package of abrpackage){ %>
              <a href="/<%= package._id %>">
                <li class="card">
                  <div class="img"><img src="<%= package.image.url %>" alt="" draggable="false"></div>
                  <div class="package">
                    <h3 class="packagetitle"><%= package.title %></h3>
                    <h6 class="packageduration"><i class="fa-regular fa-calendar"></i>&nbsp;<%= package.duration %></h6>
                    <h6 class="packageprice">&#8377; <%= package.price.toLocaleString("en-IN") %></h6>
                  </div>
                </li>
              </a>
            <% } %>
          </ul>
          <i id="right2" class="fa-solid fas fa-angle-right"></i>
        </div>
      </div>
      <a href="/customize">
        <div class="custom">
          <img src="assets/customizeyourtrip.jpg" alt="">
          <div><h2 class="customtitle">Customize Your Trip</h2></div>
        </div>
      </a>
      <%- include("includes/footer.ejs") %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
      <script src="js/Home.js"></script>
</body>

</html>